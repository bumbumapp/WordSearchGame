<resources>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#1D1B2E</item>
        <item name="colorPrimaryDark">#1D1B2E</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:textColorPrimary">@color/dark_blue</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textColorSecondary">@color/light_blue</item>
        <item name="android:tint">#201F2B</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

</resources>
